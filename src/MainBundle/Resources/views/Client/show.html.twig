{% extends 'MainBundle:Back:baseBack.html.twig' %}
{% form_theme delete_form 'MainBundle:Form:fieldsDelete.html.twig' %}

{% block body -%}
<div class="page" style="width:40%;margin:auto">
    <h1 style="text-decoration:underline">Client</h1><br>

    <table class="record_properties table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entity.adresse }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ entity.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entity.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ entity.pays }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Mdp</th>
                <td>{{ entity.mdp }}</td>
            </tr>
        </tbody>
    </table>
    {{ form(delete_form) }}
    <br><br><br>

    <ul class="record_actions">
        <li>
            <a href="{{ path('client_edit', { 'id': entity.id }) }}">
                Editer
            </a>
        </li>
        <li>
            <a href="{{ path('client') }}">
                Retourner Ã  la liste
            </a>
        </li>
    </ul>
</div>
{% endblock %}
